export THIS_DIR="$(cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")" && pwd)"
set -o allexport
source $THIS_DIR/.env
set +o allexport

if [ $# -lt 1 ]; then
  echo "Usage: $(basename $0) <address> [<fromBlock>] [<toBlock>]"
  exit 1
fi

FROM="${2:-1}"
TO="${3:-latest}"

curl "https://$EVMSCAN_API_DOMAIN/api?module=logs&action=getLogs&address=$1&fromBlock=$FROM&toBlock=$TO&apikey=$EVMSCAN_API_KEY" | jq
