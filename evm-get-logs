export THIS_DIR="$(cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")" && pwd)"
set -o allexport
source $THIS_DIR/.env
set +o allexport

if [ $# -lt 3 ]; then
  echo "Usage: $(basename $0) <address> <fromBlock> <toBlock>"
  exit 1
fi

curl "https://api.etherscan.io/api?module=logs&action=getLogs&address=$1&fromBlock=$2&toBlock=$3&apikey=$ETHERSCAN_API_KEY" | jq
